<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="vaszakharchenko@gmail.com" id="RADIUS 1.0">

        <createTable tableName="RADIUS_CONFIGURATION">
            <column name="RADIUS_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="AUTO_START" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="AUTH_PORT" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="ACCOUNT_PORT" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="RADIUS_SHARED" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_MODIFICATION" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="LAST_MODIFICATION_USER_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>

            </column>
        </createTable>

        <addPrimaryKey

                constraintName="PK_RADIUS_CONFIGURATION"
                tableName="RADIUS_CONFIGURATION"
                columnNames="RADIUS_ID"
        />

        <addForeignKeyConstraint baseTableName="RADIUS_CONFIGURATION" baseColumnNames="LAST_MODIFICATION_USER_ID"
                                 constraintName="fk_muser_config" referencedTableName="USER_ENTITY"
                                 referencedColumnNames="ID" onDelete="CASCADE"/>

        <createTable tableName="RADIUS_REALM_PROPERTY">
            <column name="RADIUS_PARAMETER_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="KEY" type="VARCHAR(256)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="VALUE" type="VARCHAR">
                <constraints nullable="true"/>
            </column>
            <column name="CONFIG_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_MODIFICATION" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="LAST_MODIFICATION_USER_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>

            </column>
        </createTable>

        <addPrimaryKey

                constraintName="PK_RADIUS_REALM_PROPERTY"
                tableName="RADIUS_REALM_PROPERTY"
                columnNames="RADIUS_PARAMETER_ID"
        />

        <addForeignKeyConstraint baseTableName="RADIUS_REALM_PROPERTY" baseColumnNames="LAST_MODIFICATION_USER_ID"
                                 constraintName="fk_muser_property" referencedTableName="USER_ENTITY"
                                 referencedColumnNames="ID" onDelete="CASCADE"/>

    </changeSet>

</databaseChangeLog>
